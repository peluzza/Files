<?xml version="1.0"?>
<root>

  <item>
    <name>Change รง key to colon (:).</name>
    <appendix>shift-รง to backslash(\).</appendix>
    <identifier>private.spanish_colon_hack</identifier>
    <inputsource_only>SPANISH</inputsource_only>

    <!-- รง to colon (:) -->
    <autogen>
      __KeyToKey__
      KeyCode::SLASH, ModifierFlag::NONE,
      KeyCode::QUOTE, ModifierFlag::SHIFT_L,
    </autogen>

    <!-- shift-รง to backslash(\) -->
    <autogen>
      __KeyToKey__
      KeyCode::SLASH, MODIFIERFLAG_EITHER_LEFT_OR_RIGHT_SHIFT | ModifierFlag::NONE,
      KeyCode::KEY_6, ModifierFlag::OPTION_L,
    </autogen>
  </item>

</root>
